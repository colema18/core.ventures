<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    @Styles.Render("~/css/baseline")
    @Styles.Render("~/css/fancybox")
    
</head>
<body>
    <!-- Header -->
    <section id="header">
        <header class="major">
            <h1>Core.Ventures</h1>
            <p>independent technology professionals</p>
        </header>
        <div class="container">
            <ul class="actions">
                <li><a href="#one" class="button special scrolly">Company</a></li>
                <li><a href="#two" class="button special scrolly">Developer</a></li>
            </ul>
        </div>
    </section>
    @RenderBody()

    <!-- Footer -->
    <section id="footer">
        <div class="container">
            <header class="major">
                <h2>Contact Kate</h2>
            </header>
            <form method="post" action="#">
                <div class="row uniform">
                    <div class="6u 12u$(xsmall)"><input type="text" name="name" id="name" placeholder="Name" /></div>
                    <div class="6u$ 12u$(xsmall)"><input type="email" name="email" id="email" placeholder="Email" /></div>
                    <div class="12u$"><textarea name="message" id="message" placeholder="Message" rows="4"></textarea></div>
                    <div class="12u$">
                        <ul class="actions">
                            <li><input type="submit" value="Send Message" class="special" id="sendEmail" /></li>
                        </ul>
                    </div>
                </div>
            </form>
        </div>
        <footer>
            <ul class="icons">
                <li><a href="#" class="icon alt fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" target="_blank" class="icon alt fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" target="_blank" class="icon alt fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="mailto:james@core.ventures" target="_blank" class="icon alt fa-envelope"><span class="label">Email</span></a></li>
            </ul>
            <ul class="copyright">
                <li>&copy; core.ventures | photo cred: <a href="http://www.wallpaperup.com/" target="_blank">wallpaperup</a></li>
            </ul>
        </footer>
    </section>

    @Scripts.Render("~/js/baseline")
    @Scripts.Render("~/js/fancybox")
    @RenderSection("scripts", required: false)
</body>
</html>
